<Page x:ConnectionId='1'
    x:Class="ZsutPw.Patterns.WindowsApplication.View.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:i="using:Microsoft.Xaml.Interactivity"
    xmlns:icore="using:Microsoft.Xaml.Interactions.Core"
    xmlns:model="using:ZsutPw.Patterns.WindowsApplication.Model"
    xmlns:view="using:ZsutPw.Patterns.WindowsApplication.View"
    xmlns:controller="using:ZsutPw.Patterns.WindowsApplication.Controller"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <controller:ApplicationStateConverter x:Key="ApplicationStateConverter" />
        <view:NodeDataConverter x:Key="NodeDataConverter" />

        <DataTemplate x:Key="NodeListViewTemplate"                            >
            <TextBlock x:ConnectionId='3'                                                                            />
        </DataTemplate>
    </Page.Resources>

    <Page.BottomAppBar>
        <CommandBar IsOpen="True" IsSticky="False" Visibility="Visible">
            <AppBarButton x:ConnectionId='4' Icon="List" Label="List"                                               />
            <AppBarButton x:ConnectionId='5' Icon="Map" Label="Map"                                              />
            <CommandBar.SecondaryCommands>
                <AppBarButton Icon="Setting" Label="Settings" IsEnabled="False" />
                <AppBarButton Icon="Help" Label="Help" />
            </CommandBar.SecondaryCommands>
        </CommandBar>
    </Page.BottomAppBar>

    <Grid x:ConnectionId='6' x:Name="rootPanel" HorizontalAlignment="Center" VerticalAlignment="Center"
          Background="{ThemeResource SystemControlBackgroundBaseLowBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="400" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid x:ConnectionId='7' x:Name="listPanel" Grid.Row="0"
              Width="300">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="320" />
            </Grid.RowDefinitions>

            <StackPanel x:ConnectionId='9' x:Name="nodeSearchPanel" Grid.Row="0" Orientation="Horizontal" Margin="8">
                <TextBox x:ConnectionId='14' x:Name="searchText" Header="Text to search:"                                              
                         Width="240" VerticalAlignment="Bottom"                                      />
                <AppBarButton x:ConnectionId='15' x:Name="searchButton" Icon="Zoom"
                                                                                    Height="36" Width="36" VerticalAlignment="Bottom" Margin="4,0,0,0"/>
            </StackPanel>

            <StackPanel x:ConnectionId='10' x:Name="nodePanel" Grid.Row="1" Padding="8"
                        Background="{ThemeResource SystemControlBackgroundChromeMediumBrush}">
                <TextBlock x:ConnectionId='11' x:Name="nodeText" Text="Nodes" Margin="0,4,0,4" />
                <ListView x:ConnectionId='12' x:Name="nodeList"                                                   
                          ItemTemplate="{StaticResource NodeListViewTemplate}"
                                                                                  Height="240" BorderThickness="1"
                          BorderBrush="{ThemeResource SystemControlForegroundBaseMediumLowBrush}" />
                <CommandBar x:ConnectionId='13' x:Name="nodeCommandBar" DefaultLabelPosition="Right" Background="Transparent"
                            HorizontalAlignment="Center">
                    <AppBarButton Icon="Add" />
                    <AppBarButton Icon="View" />
                    <AppBarButton Icon="Edit" />
                </CommandBar>
            </StackPanel>
        </Grid>

        <HyperlinkButton x:ConnectionId='8' x:Name="zsutHyperlink" Content="Jak pisać dobry kod."
                         NavigateUri="https://docs.microsoft.com/en-us/dotnet/csharp/programming-guide/inside-a-program/coding-conventions"
                         Grid.Row="1" HorizontalAlignment="Center" Foreground="{ThemeResource SystemControlBackgroundBaseHighBrush}"/>

        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:ConnectionId='16' x:Name="ApplicationViewStates">
                <VisualState x:ConnectionId='17' x:Name="map">
                    <Storyboard>
                        <DoubleAnimation Storyboard.TargetName="listPanel" Storyboard.TargetProperty="Opacity" To="0.0"
                                         Duration="0:0:2.0" />
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="listPanel"
                                                       Storyboard.TargetProperty="Visibility">
                            <DiscreteObjectKeyFrame KeyTime="0:0:2.0" Value="Collapsed" />
                        </ObjectAnimationUsingKeyFrames>
                    </Storyboard>
                </VisualState>

                <VisualState x:ConnectionId='18' x:Name="list">
                    <Storyboard>
                        <DoubleAnimation Storyboard.TargetName="listPanel" Storyboard.TargetProperty="Opacity" To="1.0"
                                         Duration="0:0:2.0" />
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="listPanel"
                                                       Storyboard.TargetProperty="Visibility">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="Visible" />
                        </ObjectAnimationUsingKeyFrames>
                    </Storyboard>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <i:Interaction.Behaviors>
            <icore:DataTriggerBehavior
                Binding="{Binding CurrentState, Mode=OneWay, Converter={StaticResource ApplicationStateConverter}}"
                ComparisonCondition="Equal" Value="Map">
                <icore:GoToStateAction StateName="map" />
            </icore:DataTriggerBehavior>
            <icore:DataTriggerBehavior
                Binding="{Binding CurrentState, Mode=OneWay, Converter={StaticResource ApplicationStateConverter}}"
                ComparisonCondition="Equal" Value="List">
                <icore:GoToStateAction StateName="list" />
            </icore:DataTriggerBehavior>
        </i:Interaction.Behaviors>
    </Grid>
</Page>

